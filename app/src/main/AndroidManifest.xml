<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kalis.beata.workmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.CalendarActivity" />
        <activity android:name=".activities.ListTasksActivity" />
        <activity android:name=".activities.NewTaskActivity" />
        <activity android:name=".activities.NewEventActivity" />
        <activity android:name=".activities.ListEventsActivity" />
        <activity
            android:name=".activities.TaskWorktimeActivity"
            android:label="@string/title_activity_task_worktime"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
